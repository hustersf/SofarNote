<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/app_icon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_gravity="center_vertical" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/app_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/main_text_color"
      android:textSize="14dp" />

    <TextView
      android:id="@+id/app_use_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:textColor="@color/main_text_color"
      android:textSize="12dp" />

    <com.sofar.widget.progress.MusicProgress
      android:id="@+id/app_use_progress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      app:reachColor="@color/colorAccent"
      app:reachHeight="8dp"
      app:roundConner="true"
      app:unReachColor="@color/divider_color"
      app:unReachHeight="8dp" />

  </LinearLayout>

</LinearLayout>
